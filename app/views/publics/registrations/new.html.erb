<div class="container">
  <h2>会員登録</h2>
  <div class="row">
    <div class="col text-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profiel_iamge %>
        </div>

        <div class="field">
          <%= f.label :"名前" %>
          <%= f.text_field :first_name, placeholder:"姓" %>
          <%= f.text_field :last_name, placeholder:"名" %>
        </div>

         <div class="field">
          <%= f.label :"フリガナ" %>
          <%= f.text_field :first_name_kana, placeholder:"セイ" %>
          <%= f.text_field :last_name_kana, placeholder:"メイ" %>
        </div>

        <div class="field">
          <%= f.label :"ニックネーム" %>
          <%= f.text_field :nick_name, placeholder:"ニックネームを入力してください" %>
        </div>

        <div class="field">
          <%= f.label :"目標" %>
          <%= f.text_field :goal, placeholder:"頑張る目標を決めましょう!!" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, placeholder: "6桁以上で入力してください", autocomplete: "new-password" %>
        </div>

        <div class="actions_btn">
          <%= f.submit "登録完了", class:"btn btn-info" %>
        </div>
      <% end %>

      <%= render "publics/shared/links" %>
    </div>
  </div>
</div>