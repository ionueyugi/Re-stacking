<div class="container">
  <h2>みんなの投稿</h2>
  <% @posts.each do |f| %>
    <div class="row">
      <%= attachment_image_tag f, :post_image, :fill, 60, 60, format: 'jpeg'%>
       <%= f.post_content %>
       <p class="p8"><i class="fas fa-heart"></i> いいね 　</br><i class="far fa-comment-dots"></i>コメント <%= f.post_comments.count %></p>
    </div>
  <% end %>











  <button type="button" class="btn btn-primary mt-5" data-toggle="modal" data-target="#post">投稿する</button>
  <div class="modal fade" id="post" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= form_with model: @post do |f| %>
          <div class="modal-body">
            <img src="", width="100" height="100", alt="No Image", id="img_prev">
            <%= f.attachment_field :post_image, class:"field" %>
            <%= f.text_field :post_content, class: "form-control", placeholder: "投稿内容を入力" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>