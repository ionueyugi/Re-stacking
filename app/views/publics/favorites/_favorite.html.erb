<div class="favorite-link" id="favorite-link-<%= f.id %>">
  <!-- いいね削除 -->
  <% if current_user.favorites.find_by(post_id: f.id) %>
    <%= link_to post_favorites_path(f.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️ いいね<%= f.favorites.count %></div>
    <% end %>
    <!-- いいねする -->
  <% else %>
    <%= link_to post_favorites_path(f.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️ いいね<%= f.favorites.count %></div>
    <% end %>
  <% end %>
</div>